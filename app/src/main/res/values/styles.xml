<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--tabbar background color-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--statusbar color-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--switch progress color-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--呼出菜单按钮背景图 默认为黑色，改为白色-->
        <item name="android:actionOverflowButtonStyle">@style/ActionButton.Overflow.More</item>
    </style>

    <!--Toolbar标题字体大小、颜色-->
    <style name="ToolbarTitleTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:color">@color/colorPrimary</item>
    </style>
    <!--Toolbar副标题字体大小、颜色-->
    <style name="ToolbarSubTitleTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:color">@android:color/holo_red_dark</item>
    </style>
    <!--菜单按钮图标  默认为黑底，改为白底-->
    <style name="ActionButton.Overflow.More" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@mipmap/others</item>
    </style>
    <!--弹出菜单背景，默认为白底，改为黑底-->
    <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:colorBackground">#000000</item>
        <!--<item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item> &lt;!&ndash;新增一个item，用于控制menu&ndash;&gt;-->
    </style>
    <!--控制菜单弹出在toolbar底部-->
    <style name="OverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>  <!--把该属性改为false即可使menu位置位于toolbar之下-->
    </style>

</resources>
